@using IrigasiManganti.Helpers;

<!DOCTYPE html>
<html lang="en">

    <head>

        <meta charset="utf-8" />
        <title>@ViewData["Title"] | DI. Manganti</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta content="PT. Higertech Karya Sinergi" name="author" />
        <meta content="Realtime Monitoring Telemetry DI. Manganti | Powered By PT. Higertech Karya Sinergi" name="description" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <!-- App favicon -->
        <link rel="shortcut icon" href="~/images/favicon.png" />

        @RenderSection("Styles", false)

        <link href="~/lib/sweetalert2/sweetalert2.min.css" rel="stylesheet" type="text/css">

        <link href="~/lib/selectize/css/selectize.bootstrap3.css" rel="stylesheet" type="text/css" />

        <!-- Bootstrap css -->
        <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <!-- App css -->
        <link href="~/css/app.min.css" rel="stylesheet" type="text/css" id="app-style"/>
        <!-- icons -->
        <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
        <!-- Head js -->
        <script src="~/js/head.min.js"></script>

        <style>
            .selectize-dropdown .optgroup-header,.selectize-dropdown .optgroup-header:hover {
                color: #323a46;
                font-weight: bold;
            }
            .topnav {
                box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 6px -1px, rgba(0, 0, 0, 0.06) 0px 2px 4px -1px;
            }

            .topnav .nav-link.active {
                color: #00acc1;
            }

            #element-avatar {
                display: flex;
                width: fit-content;
                border-radius: 3px;
                justify-content: right;
            }

            .e-avatar {
                font-size: 14px;
                width: 32px;
                height: 32px;
                border-radius: 45px;
                align-self: center;
                justify-self: center;
                display: flex;
                justify-content: center;
                align-items: center;
                font-weight: 400;
                margin-right: 7px;
                letter-spacing: 1px;
                border: 1px solid rgb(255, 255, 255, 0.5);
            }

            .e-avatar.green {
                background-color: #87eb87;
            }

            .e-avatar.violet {
                background-color: #ee82ee;
            }

            .e-avatar.blue {
                background-color: #7171e4;
            }

            .e-avatar.red {
                background-color: #d86e6e;
            }

            .e-avatar.rose {
                /* background-color: #bc8f8f; */
                background-color: #52C1F5;
                color: white;
            }

            #sidebar-menu>ul>li>a {
                font-size: 14px;
            }

            .nav-second-level li a {
                font-size: 13.5px;
            }

            #sidebar-menu .menu-title {
                padding: 10px 20px;
                padding-bottom: 0;
                font-size: .7rem;
            }

            .highlight {
                padding: 1rem;
                margin-bottom: 1rem;
                background-color: #f8f9fa;
                border-radius: 6px;
            }

            .selectize-input, .selectize-input.input-active {
                border-radius: 6px;
            }

            .navbar-custom .app-company {
                height: 70px;
                display: table;
                width: 320px;
                margin-right: 20px;
            }

            .navbar-custom .app-company .app-company-box {
                display: table-cell;
                vertical-align: middle;
                position: relative;
            }

            .navbar-custom .topnav-menu .nav-link {
                color: #fff;
                font-weight: 400;
                font-size: 0.9rem;
                letter-spacing: 1px;
            }

            .table-custom {
                border-collapse: collapse;
                border-top-left-radius: 14px;
                border-top-right-radius: 14px;

                /* add this */
                overflow:hidden
            }

            .table-custom tbody {
                border: 1px solid #dee2e6;
            }

            .table-custom thead {
                border: 1px solid #065fd4;
                background-color: #065fd4;
                color: #fff;
            }

            .table-custom-arr thead {
                border: 1px solid rgb(255, 255, 255, 0.3);
            }

            @* .table-custom thead tr th {
                &:first-child { border-radius: 8px 0 0 0 }
                &:last-child { border-radius: 0 8px 0 0 }
            } *@

            .table-sm>:not(caption)>*>* {
                padding-left: 0.85rem;
                padding-right: 0.85rem;
            }

            .parsley-errors-list>li {
                @* padding-left: 0; *@
                margin-top: 0.25rem;
                font-size: .75rem;
                color: #f1556c;
            }
            
            .parsley-errors-list>li:before {
                content: "\f05d6";
                font-size: .85rem;
                @* "\f0028" *@
            }

            .ms-container {
                width: 100%;
                max-width: 100%;
            }

            .custom-header {
                text-align: center;
                padding: 3px;
                background: #0065A2;
                color: #fff;
            }

            .navbar-custom {
                background-color: #213271;
                border-bottom: 3px solid #ffc800;
                box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
                height: 75px;
            }

            #show_date {
                color: #fff;
                font-weight: 400;
                font-size: 0.9rem;
                letter-spacing: 1px;
            }

            #logo-desc {
                font-family: 'Montserrat', sans-serif;
                font-weight: 500;
                display: flex;
                flex-direction: column;
                justify-content: space-evenly;
                margin-top: 12px !important;
                margin-bottom: 12px !important;
            }

            .logo-box.d-flex {
                width: auto !important;
            }

            #logo-desc>span {
                display: block !important;
                font-size: 16px !important;
                color: white;
                font-weight: 600;
            }

            #logo-desc>span:nth-child(2) {
                font-size: 14px !important;
                font-weight: 500;
            }

            #logo-desc>span:last-child {
                font-size: 12px !important;
                font-weight: 500;
            }

            @@media only screen and (min-width: 992px) {

                #logo-desc>span {
                    display: block !important;
                    font-size: 12px !important;
                    color: #fff;
                }

                #logo-desc {
                    margin-left: 10px !important;
                }

                #logo-desc>span:nth-child(2) {
                    font-size: 11px !important;
                }

                #logo-desc>span:last-child {
                    font-size: 11px !important;

                }

            }

            .logo-lg img {
                @* margin-bottom: 3px; *@
            }

            .dataTables_info, .dataTables_paginate {
                width: 50%;
                display: inline-block;
            }
            div#paging_simple_numbers {
                padding-top: 0.85em;
            }

            .floating-action {
                bottom: 0;
                padding: 15px 15px 15px;
                position: fixed;
                right: 0;
                color: var(--ct-text-muted);
                left: 0;
                z-index: 1000;
                background-color: rgba(255,255,255,0.95);
                box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.05), inset 0 -1px 0 rgba(0,0,0,0.15);
                border-top: 1px solid #D9D9D9;
            }
            
        </style>

        @RenderSection("CustomStyles", false)

    </head>

    <!-- body start -->
    <body data-theme="light" data-layout-mode="horizontal" data-topbar-color="dark" data-menu-position="fixed">
        <!-- Pre-loader -->
        <div id="preloader">
            <div id="status">
                <div class="spinner">Loading...</div>
            </div>
        </div>
        <!-- End Preloader-->
        <!-- Begin page -->
        <div id="wrapper">

            
            <!-- Topbar Start -->
            <div class="navbar-custom">
                <div class="container-fluid">
                    <ul class="list-unstyled topnav-menu float-end mb-0">

                        <li class="d-none d-xl-block">
                            <a class="nav-link waves-effect waves-light m-0" aria-haspopup="false" aria-expanded="false" id="show_date"></a>
                        </li>

                        @if(!string.IsNullOrEmpty(ClaimIdentity.Username)) {
                        <li class="dropdown notification-list topbar-dropdown">
                            <a class="nav-link dropdown-toggle nav-user me-0 waves-effect waves-light" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                                <div id='element-avatar'>
                                    @{
                                        var result = "";
                                        var name = ClaimIdentity.Username;
                                        var arrName = name.Split(".");
                                        if (arrName.Length > 1)
                                        {
                                            result = $"{arrName[0][0]}{arrName[arrName.Length - 1][0]}";
                                        }
                                        else
                                        {
                                            result = $"{name[0]}";
                                        }
                                        <span class="e-avatar e-avatar-xlarge e-avatar-circle rose">@result.ToUpper()</span>
                                    }

                                    <span class="spanforname">@ClaimIdentity.Username  <i class="fas fa-chevron-down ms-1"></i></span>
                                </div>
                                <span class="pro-user-name ms-1">
                                    Administrator <i class="mdi mdi-chevron-down"></i>
                                </span>
                            </a>
                            <div class="dropdown-menu dropdown-menu-end profile-dropdown ">
                                <!-- item-->
                                <a href="/Station" class="dropdown-item notify-item">
                                    <i class="fe-log-in"></i>
                                    <span>Go to Admin Area</span>
                                </a>

                                <a href="javascript:void(0);" class="dropdown-item notify-item">
                                    <i class="fe-user"></i>
                                    <span>Akun Saya</span>
                                </a>

                                <div class="dropdown-divider"></div>

                                <!-- item-->
                                <a href="javascript:void(0);" class="dropdown-item notify-item" onclick="logout(this, event)">
                                    <i class="fe-log-out"></i>
                                    <span>Logout</span>
                                    <form id="logout-form" action="@Url.Action("Logout","Account")" method="POST" style="display: none;">
                                    </form>
                                </a>

                            </div>
                        </li>
                    } else {
                        <li>
                            <a href="/Account/Login" class="nav-link waves-effect waves-light m-0" aria-haspopup="false" aria-expanded="false">LOGIN <i class="mdi mdi-login"></i></a>
                        </li>
                    }

                    <li class="dropdown">
                        <a class="nav-link dropdown-toggle arrow-none waves-effect waves-light" data-toggle="fullscreen" href="#">
                            <i class="fe-maximize noti-icon"></i>
                        </a>
                    </li>

                    </ul>

                    <div class="logo-box d-flex">
                        <div>
                            <a href="/" class="logo logo-dark text-center">
                                <span class="logo-sm">
                                    <img src="~/images/logos/logo-pu.jpeg" alt="" height="30">
                                    <!-- <span class="logo-lg-text-light">UBold</span> -->
                                </span>
                                <span class="logo-lg">
                                    <img src="~/images/logos/logo-pu.jpeg" alt="" height="20">
                                    <!-- <span class="logo-lg-text-light">U</span> -->
                                </span>
                            </a>

                            <a href="/" class="logo logo-light">
                                <span class="logo-sm" id="logo-sm-light">
                                    <img class="ms-3 rounded-2" src="~/images/logos/logo-pu.jpeg" alt="" height="40">
                                </span>
                                <span class="logo-lg" id="logo-lg-light">
                                    <img class="rounded-2" src="~/images/logos/logo-pu.jpeg" alt="" height="45">
                                </span>
                            </a>
                        </div>
                        <div class="d-none d-md-block d-lg-block d-xl-block" id="logo-desc">
                            <span class="text-uppercase">UP IRIGASI BBWS CITANDUY</span>
                            <span>Direktorat Jenderal Sumber Daya Air</span>
                            <span>Kementerian Pekerjaan Umum dan Perumahan Rakyat</span>
                        </div>
                    </div>

                    <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
                        <li>
                            <button class="button-menu-mobile waves-effect waves-light">
                                <i class="fe-menu"></i>
                            </button>
                        </li>

                        <li>
                            <!-- Mobile menu toggle (Horizontal Layout)-->
                            <a class="navbar-toggle nav-link" data-bs-toggle="collapse" data-bs-target="#topnav-menu-content">
                                <div class="lines">
                                    <span class="bg-white opacity-75"></span>
                                    <span class="bg-white opacity-75"></span>
                                    <span class="bg-white opacity-75"></span>
                                </div>
                            </a>
                            <!-- End mobile menu toggle-->
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
            </div>
            <!-- end Topbar -->

            <!-- ========== Left Sidebar Start ========== -->
            @* <partial name="_LeftSidebar"></partial> *@
            @if(!string.IsNullOrEmpty(ClaimIdentity.Username)) {
                <partial name="_topbar"></partial>
            }
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                @RenderBody()
                <!-- Footer Start -->
                <partial name="_Footer"></partial>
                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <!-- END wrapper -->

        <!-- Right bar overlay-->
        <div class="rightbar-overlay"></div>

        <!-- Vendor js -->
        <script src="~/js/vendor.min.js"></script>


        @RenderSection("scripts", false)
        <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
        <!-- App js-->
        <script src="~/js/app.min.js"></script>

        <script src="~/lib/moment/min/moment.min.js"></script>
        <script
        src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment-with-locales.min.js"
        integrity="sha512-42PE0rd+wZ2hNXftlM78BSehIGzezNeQuzihiBCvUEB3CVxHvsShF86wBWwQORNxNINlBPuq7rG4WWhNiTVHFg=="
        crossorigin="anonymous"
        referrerpolicy="no-referrer"
        ></script>
        <script src="https://cdn.jsdelivr.net/npm/moment-timezone@0.5.43/moment-timezone.min.js"></script>
        <script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.31/moment-timezone-with-data.js"
        ></script>

        <script src="~/lib/selectize/js/standalone/selectize.min.js"></script>
        <script src="~/lib/axios/axios.min.js"></script>
        <script src="~/js/global.min.js"></script>

        <script>
            let currHour = null;
            var timeZone = 'WIB';

            $(document).ready(function() {
                let initDateClock = setInterval(showDateClock, 1000);
                $('.selectize').selectize({
                    
                });
            });
            
            window.logout = (input, evt) => {
                evt.preventDefault();

                Swal.fire({
                    title: 'Logout',
                    text: "Anda yakin untuk logout ?",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Ya, Logout',
                    cancelButtonText: 'Batal',
                    showLoaderOnConfirm: true,
                    preConfirm: (login) => {
                       
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                }).then((result) => {
                    if (result.isConfirmed) {
                        document.getElementById('logout-form').submit();
                    }
                })
            }   

            window.showDateClock = function () {
                let momentjs = moment();

                momentjs.locale('id');

                if(timeZone == 'WIT') {
                    momentjs.tz("Asia/Jayapura");
                } else if(timeZone == 'WITA') {
                    momentjs.tz("Asia/Makassar");
                } else {
                    momentjs.tz("Asia/Jakarta");
                }

                currHour = momentjs.format('HH:mm:ss');

                $('#show_date').html(momentjs.format('dddd, D MMMM YYYY') + ' ' + currHour + ' ' + timeZone);

            };                                  
        </script>

        @RenderSection("additionalScripts", false)
    </body>
</html>