@section additionalScripts {
    <script>
        const dateBar = document.getElementById('dateBar');
        const monthTitle = document.getElementById('monthTitle');
        const today = new Date();
        const startDate = new Date(today.getFullYear(), today.getMonth(), 1);
        const endDate = new Date(today.getFullYear(), today.getMonth() + 1, 0);

        const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        const daysOfWeek = ['Su', 'Mo', 'Tu', 'We', 'Th', 'Fr', 'Sa']; // Corrected days order

        monthTitle.textContent = `${monthNames[today.getMonth()]} ${today.getFullYear()}`;

        for (let d = startDate; d <= endDate; d.setDate(d.getDate() + 1)) {
            const dayDiv = document.createElement('div');
            const dayOfWeek = daysOfWeek[d.getDay()]; // Adjusted to get the correct day of the week

            dayDiv.innerHTML = `
                <div class="today-text">${d.toDateString() === today.toDateString() ? 'Today' : ''}</div>
                <div>
                    ${d.getDate()}<br>
                    <small>${dayOfWeek}</small>
                </div>
            `;

            if (d.toDateString() === today.toDateString()) {
                dayDiv.classList.add('today');
                dayDiv.classList.add('selected');
                dayDiv.querySelector('.today-text').style.display = 'block';
            }

            dayDiv.addEventListener('click', function() {
                document.querySelectorAll('.date-bar div').forEach(div => {
                    div.classList.remove('selected');
                    const todayText = div.querySelector('.today-text');
                    if (todayText) {
                        todayText.style.display = 'none';
                    }
                });
                dayDiv.classList.add('selected');
                const todayText = dayDiv.querySelector('.today-text');
                if (todayText) {
                    todayText.style.display = 'block';
                }
            });

            dateBar.appendChild(dayDiv);
        }
    </script>
