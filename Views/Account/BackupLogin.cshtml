@{ Layout = string.Empty; } 
@model IrigasiManganti.ViewModels.VMLogin;
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Log In | @ViewData["tag_title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta content="@ViewData["tag_author"]" name="author" />
    <meta content="@ViewData["tag_description"]" name="description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/@ViewData["favicon"]" />

    <!-- Bootstrap css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- App css -->
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" id="app-style"/>

    <style>
      body.authentication-bg-pattern {
          background-image: url(../images/bg-login.jpg);
      }

      #Password {
        border-bottom-left-radius: 50rem;
        border-top-left-radius: 50rem;
      }

      .input-group-text {
        border-bottom-right-radius: 50rem;
        border-top-right-radius: 50rem;
      }

      .card-login {
        border-radius: 0.8rem;
      }

      .btn-submit {
          font-size: 1rem;
      }

      .parsley-errors-list>li {
          @* padding-left: 0; *@
          margin-top: 0.25rem;
          font-size: .75rem;
          color: #f1556c;
      }
      
      .parsley-errors-list>li:before {
          content: "\f05d6";
          font-size: .85rem;
          @* "\f0028" *@
      }
    </style>
    <!-- icons -->
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- Head js -->
    <script src="~/js/head.min.js"></script>
  </head>

  <body class="authentication-bg authentication-bg-pattern">
    <!-- Pre-loader -->
    <div id="preloader">
        <div id="status">
            <div class="spinner">Loading...</div>
        </div>
    </div>
    <!-- End Preloader-->
    <div class="account-pages mt-5 mb-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8 col-lg-6 col-xl-4">
            <div class="card card-login">
              <div class="card-body p-4">
                <div class="text-center m-auto">
                  <a href="/" class="logo logo-light text-center">
                    <span class="logo-lg">
                      <img class="rounded-3" src="~/images/logo-pu.jpeg" alt="" height="80" />
                    </span>
                  </a>
                  <h4 class="mt-3 font-16 fw-bold">@ViewData["name"]</h4>
                  <p class="mb-3 font-14">Silahkan login untuk mengakses aplikasi</p>
                </div>
               
                <form class="parsley-validation" id="login-form" method="POST" onsubmit="login(this,event)">
                  <div class="mb-3">
                    <label for="Username" class="form-label">Username</label>
                    <input class="form-control rounded-pill" type="text" asp-for="Username" placeholder="Masukkan Username" data-parsley-errors-container="#error-username" data-parsley-required-message="Username tidak boleh kosong" required/>
                    <span id="error-username"></span>
                  </div>

                  <div class="mb-3">
                    <label for="Password" class="form-label">Password</label>
                    <div class="input-group input-group-merge">
                      <input type="password" asp-for="Password" class="form-control" placeholder="Masukkan password" data-parsley-errors-container="#error-password" data-parsley-required-message="Password tidak boleh kosong" required/>
                      <div class="input-group-text" data-password="false">
                        <span class="password-eye"></span>
                      </div>
                    </div>
                    <span id="error-password"></span>
                  </div>

                  <div class="mb-3">
                    <div class="form-check">
                      <input type="checkbox" class="form-check-input" asp-for="KeepLoggedIn" checked />
                      <label class="form-check-label" for="KeepLoggedIn">Remember me</label>
                    </div>
                  </div>

                  <div class="text-center d-grid">
                    <button type="submit" class="btn btn-blue rounded-pill waves-effect waves-light btn-submit">Sign In <i class="fe-log-in ms-1"></i></button>
                  </div>
                </form>
              </div>
              <!-- end card-body -->
            </div>
            <!-- end card -->

            <!-- end row -->
          </div>
          <!-- end col -->
        </div>
        <!-- end row -->
      </div>
      <!-- end container -->
    </div>
    <!-- end page -->

    <footer class="footer footer-alt text-white">
      <script>
        document.write(new Date().getFullYear());
      </script>
      &copy; @ViewData["name"] <span class="mx-1">&#x2022;</span> Direktorat Jendral Sumber Daya Air <span class="mx-1">&#x2022;</span> Kementerian Pekerjaan Umum dan Perumahan Rakyat
    </footer>

    <!-- Vendor js -->
    <script src="~/js/vendor.min.js"></script>

    <!-- App js -->
    <script src="~/js/app.min.js"></script>

    <script src="~/lib/axios/axios.min.js"></script>
    <script src="~/js/global.min.js"></script>

    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/parsleyjs/parsley.min.js"></script>

    <!-- Login js -->
    <script src="~/js/pages/login.min.js"></script>
  </body>
</html>
