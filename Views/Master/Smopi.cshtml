@{
    Layout = "~/Views/Shared/_LayoutNavbarOnly.cshtml";
    ViewData["Title"] = "Master Data Smopi";
}

@section styles {
    <link href="~/lib/datatables.net-bs5/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/datatables.net-responsive-bs5/css/responsive.bootstrap5.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/magnific-popup/magnific-popup.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
}

<div class="content">
    <!-- Start Content-->
    <div class="container-fluid">
        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box">
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="javascript: void(0);">Home</a></li>
                            <li class="breadcrumb-item active">Master Data Smopi</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Master Data Smopi</h4>
                </div>
            </div>
        </div>
        <!-- end page title -->

        
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-lg-6">
                                <div class="d-flex flex-wrap align-items-center">
                                    <label for="length-petak-table" class="me-2">Show</label>
                                    <div class="me-2">
                                        <select class="form-select form-select-sm rounded-pill my-1 my-lg-0"
                                            id="length-petak-table">
                                            <option selected>10</option>
                                            <option value="25">25</option>
                                            <option value="50">50</option>
                                            <option value="100">100</option>
                                            <option value="-1">All</option>
                                        </select>
                                    </div>
                                    <label for="length-petak-table" class="me-3">Entries</label>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="d-flex flex-wrap align-items-center float-end">
                                    <div class="text-lg-end" style="margin-right: 20px;">
                                        <div class="input-group">
                                            <button class="input-group-text text-white btn-prev-next" id="btn-prev">
                                                <i class="mdi mdi-chevron-left font-16"></i>
                                            </button>
                                            <input type="text" class="form-control text-center" placeholder="" id="filter-date" readonly="readonly">
                                            <button class="input-group-text text-white btn-prev-next" id="btn-next">
                                                <i class="mdi mdi-chevron-right font-16"></i>
                                            </button>
                                        </div>
                                    </div>
                                    <form class="search-bar form-inline me-3">
                                        <div class="position-relative">
                                            <input type="text" class="form-control" placeholder="Search..." id="search-petak-table">
                                            <span class="mdi mdi-magnify"></span>
                                        </div>
                                    </form>
                                    @* <div class="text-lg-end">
                                        <button type="button" class="btn btn-blue rounded-pill" data-id=""
                                            onclick="createEditPetak(this, event)">
                                            <i class="fe-plus me-1"></i> Tambah Petak
                                        </button>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-sm table-centered table-bordered table-hover mb-0 table-custom w-100" id="table-petak">
                                <thead class="bg-blue text-white">
                                    <tr>
                                        <th class="text-center">No.</th>
                                        <th>Nama Petak</th>
                                        @* <th>jenis Bangunan</th> *@
                                        @* <th>Nama Bangunan</th> *@
                                        <th>Luas</th>
                                        <th>Debit Kebutuhan</th>
                                        <th>Lokasi</th>
                                        <th class="text-center"></th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div> <!-- end card-body-->
                </div> <!-- end card-->
            </div> <!-- end col -->
        </div>

    </div> <!-- container -->

</div> <!-- content -->

<!-- Modal Create Edit -->
<div id="modalCreateEditPetak" class="modal fade" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="modalLabelUser" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">

        </div>
    </div>
</div><!-- /.modal -->

@section scripts {
    <script src="~/lib/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables.net-bs5/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="~/lib/datatables.net-responsive-bs5/js/responsive.bootstrap5.min.js"></script>
    <script src="~/lib/sweetalert2/sweetalert2.all.min.js"></script>
    <script src="~/lib/parsleyjs/parsley.min.js"></script>
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/js/pages/master_smopi.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
}